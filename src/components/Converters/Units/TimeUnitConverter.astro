<section class="flex flex-col gap-4 justify-start items-start text-white max-w-lg min-w-60">
  <h3 class="converterTitle">Time Unit Converter</h3> <!-- Título dinámico -->

  <div class="flex flex-col w-full">
    <label for="timeInputConverter" class="mb-2">Enter the time value:</label>
    <input
      type="number"
      id="timeInputConverter"
      class="w-full px-4 py-2 text-black bg-gray-100 rounded-lg"
      placeholder="Enter time value"
    />
  </div>

  <div class="flex flex-col w-full">
    <label for="fromUnitConverter" class="mb-2">Convert from:</label>
    <select
      id="fromUnitConverter"
      class="w-full px-4 py-2 text-black bg-gray-100 rounded-lg"
    >
      <option value="seconds">Seconds</option>
      <option value="minutes">Minutes</option>
      <option value="hours">Hours</option>
      <option value="days">Days</option>
      <option value="weeks">Weeks</option>
      <option value="months">Months</option>
      <option value="years">Years</option>
    </select>
  </div>

  <div class="flex flex-col w-full">
    <label for="toUnitConverter" class="mb-2">Convert to:</label>
    <select
      id="toUnitConverter"
      class="w-full px-4 py-2 text-black bg-gray-100 rounded-lg"
    >
      <option value="seconds">Seconds</option>
      <option value="minutes">Minutes</option>
      <option value="hours">Hours</option>
      <option value="days">Days</option>
      <option value="weeks">Weeks</option>
      <option value="months">Months</option>
      <option value="years">Years</option>
    </select>
  </div>

  <button
    id="convertBtnConverter"
    class="mt-4 px-6 py-2.5 bg-blue-600 hover:bg-blue-700 text-white rounded-lg transition-colors duration-300"
  >
    Convert
  </button>

  <div class="mt-4">
    <label for="resultConverter" class="mb-2">Result:</label>
    <p id="resultTimeUnitConverter" class="text-lg text-white p-2 rounded"></p>
  </div>
</section>

<script>
  // @ts-nocheck

  document.addEventListener("DOMContentLoaded", () => {
      const timeInput = document.getElementById('timeInputConverter');
      const fromUnit = document.getElementById('fromUnitConverter');
      const toUnit = document.getElementById('toUnitConverter');
      const convertBtn = document.getElementById('convertBtnConverter');
      const resultDisplay = document.getElementById('resultTimeUnitConverter');

      const timeUnitsInSeconds = {
          seconds: 1,
          minutes: 60,
          hours: 3600,
          days: 86400,
          weeks: 604800,
          months: 2592000, // Aproximado (30 días)
          years: 31536000, // Aproximado (365 días)
      };

      convertBtn.addEventListener('click', () => {
          const inputValue = parseFloat(timeInput.value);
          const fromValue = fromUnit.value;
          const toValue = toUnit.value;

          if (!isNaN(inputValue)) {
              let result =
                  (inputValue * timeUnitsInSeconds[fromValue]) /
                  timeUnitsInSeconds[toValue];

              // Redondear el resultado a 2 decimales si no es un número entero
              result = Number.isInteger(result) ? result : result.toFixed(2);

              resultDisplay.innerText = `${inputValue} ${fromValue} = ${result} ${toValue}`;
          } else {
              resultDisplay.innerText = "Please enter a valid number.";
          }
      });
  });
</script>
