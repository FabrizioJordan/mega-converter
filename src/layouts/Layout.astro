---
import { ViewTransitions } from 'astro:transitions';
interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html class="scroll-smooth" lang="es">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
		<ViewTransitions />
	</head>
	<body class="bg-[#1f2123] text-white font-Lato scroll-smooth overflow-x-hidden">
		<slot />
	</body>
</html>

<style is:global>
	@tailwind base;
		
	@font-face {
		font-family: 'Lato';
		font-style: normal;
		src: url(../../src/assets/fonts/Lato/Lato-Regular.ttf);
	}
	@font-face {
		font-family: 'Lato-Light';
		font-style: normal;
		src: url(../../src/assets/fonts/Lato/Lato-Light.ttf);
	}
	@layer base {
		@font-face {
			font-family: 'Lato';
			font-style: normal;
			src: url(../../src/assets/fonts/Lato/Lato-Regular.ttf) format('ttf');
		}
		@font-face {
			font-family: 'Lato-Light';
			font-style: normal;
			src: url(../../src/assets/fonts/Lato/Lato-Light.ttf) format('ttf');
		}
	}
	
	.font-Lato{
		font-family: 'Lato', system-ui, -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif
	}
	.font-LatoLight{
		font-family: 'Lato-Light', system-ui, -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif
	}

	.converterTitle{
		@apply text-lg tracking-wide
	}

</style>